<p> <%= link_to "‚Üê back to collections", lists_path %> </p>
<% if @list.photo.attached? %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, crop:   :fill, transformation: [{effect: "saturation:0"}] %>');">
    <div class="container">
      <h1> <%= @list.name %> List </h1>
      <div class="btn-center">
        <p class="link-btn-light"><%= link_to "Add bookmark",   new_list_bookmark_path(@list) %></p>
      </div>
    </div>
  </div>
<% else %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('https://t3.ftcdn.net/jpg/02/91/95/08/360_F_291950851_ouDQ0GFMb4X4MsjY1VVP6xi2zOej3AGh.jpg');">
    <div class="container">
      <h1> <%= @list.name %> List </h1>
      <div class="btn-center">
        <p class="link-btn-light"><%= link_to "Add bookmark",   new_list_bookmark_path(@list) %></p>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="cards">
    <% @bookmarks.each do |bookmark| %>
      <div class="card-movie">
        <%= image_tag bookmark.movie.poster_url %>
        <div class="card-movie-info">
          <div>
            <div class="header">
              <h2> <%= bookmark.movie.title %></h2>
              <h2> <%= bookmark.movie.rating %> ‚≠ê</h2>
            </div>
            <p class="link-btn-sm"><%= link_to "Delete bookmark",   list_bookmark_path(bookmark) %></p>
            <p><%= bookmark.movie.overview %></p>
          </div>
          <div>
            <p class="comment"> üí¨ <%= bookmark.comment %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
